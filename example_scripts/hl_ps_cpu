#!/bin/bash
#
#	@(#)	[MB] cr_hl_ps_cpu	Version 1.1 du 15/05/12 - 
#
#	Colorization of the output of the ps command
#	according to CPU time :
#	~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
#	Blue		: = 00:00:00
#	Cyan		: > 00:00:01
#	Green	: > 00:00:10
#	Yellow	: > 00:01:00
#	Red		: > 01:00:00

hl -e	-C '/home/machine/[^ ]+\.img'				\
		-r '(0[1-9]|[1-9][0-9]):[0-9]{2}:[0-9]{2} .*'		\
		-y '00:(0[1-9]|[1-9][0-9]):[0-9]{2} .*'			\
		-g '00:00:[1-9][0-9] .*'				\
		-c '00:00:0[1-9] .*'					\
		-b '00:00:00 .*'

#	-r '(([1-9][0-9]|0[1-9]):[0-9]{2}:[0-9]{2}|00:([0-9][1-9]|[1-9][0-9]):[0-9]{2}|00:00:([0-9][1-9]|[1-9][0-9])).*'
